<div class="{{ class|default('') }}">
    <div class="collapse {{ isActive is same as(true) ? 'show' : '' }}"
         aria-labelledby="heading{{ accordionAnchorId }}"
         data-parent="{{ accordionParent|default("") }}"
         id="collapse{{ accordionAnchorId }}">
        {% block collapse_content %}{% endblock %}
    </div>

    <div class="text-center vui--pseudo-center-line my-2 py-1">
        <div class="d-inline-block pl-3 pr-3 bg-light">
            <button class="vui--style-reset p-0 link {{ buttonClass|default('') }}"
                    type="button"
                    data-toggle="collapse"
                    data-target="{{ "#collapse" ~ accordionAnchorId }}"
                    aria-expanded="{{ isAriaExpanded|default('false') }}"
                    aria-controls="{{ "collapse" ~ accordionAnchorId }}">
                <span class="button-expanded__label-false">{{ collapseLabelShow|default('More details') }}</span>
                <span class="button-expanded__label-true">{{ collapseLabelHide|default('Hide details') }}</span>
            </button>
        </div>
    </div>
</div>
