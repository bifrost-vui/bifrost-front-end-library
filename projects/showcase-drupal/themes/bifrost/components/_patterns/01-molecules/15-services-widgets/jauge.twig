{% if size is defined and size is not empty %}
    {% if size == "sm" %}
        {% set sizeHeight = 70 %}
    {% elseif size == "lg" %}
        {% set sizeHeight = 120 %}
    {% else %}
        {% set sizeHeight = 90 %}
    {% endif %}
{% endif %}

{% if jaugeColor is defined and jaugeColor == 'dark' %}
    {% set bgPathColor = "#EBC100" %}
{% endif %}

{# ------------------------------------------------------------------------------------------------------------------ #}

<svg class="svg-jauge {{ class|default('') }}" height="{{ sizeHeight|default(90) }}"
     xmlns="http://www.w3.org/2000/svg" viewBox="0 0 101.1 91.9">

    <g transform="translate(0,25)">
        <rect width="100%" height="40" stroke="none" fill="none"></rect>
        <text x="50%" y="20" alignment-baseline="middle" font-size="28" stroke-width="0" stroke="#000" text-anchor="middle">{{ jaugeTextValue|default('500') }}</text>
        <text x="50%" y="42" alignment-baseline="middle" font-size="12" stroke-width="0" stroke="#000" text-anchor="middle">{{ jaugeTextUnit|default('MBITS/s') }}</text>
    </g>

    <g transform="translate(24.334)">
        <path d="M54.2 89.8C75.9 74.4 81 44.4 65.6 22.7S20.2-4.1-1.5 11.3s-26.8 45.4-11.4 67.1c3.1 4.4 7 8.3 11.4 11.4"
              fill="none" stroke="{{ bgPathColor|default('#e0e0e0') }}" stroke-miterlimit="10"/>
    </g>

    <g transform="translate(24.334)">
        <path class="js-anim-jauge svg-jauge__animated"
              data-value="{{ jaugeAnimValue|default('500') }}"
              data-max-value="{{ jaugeMaxValue|default('1000') }}"
              d="M54.2 89.8C75.9 74.4 81 44.4 65.6 22.7S20.2-4.1-1.5 11.3s-26.8 45.4-11.4 67.1c3.1 4.4 7 8.3 11.4 11.4"
              fill="none"
              stroke="{{ bgAnimPathColor|default('#231f20') }}"
              stroke-width="4"
              stroke-miterlimit="10"
              stroke-dasharray='243'
              stroke-dashoffset='243'/>
    </g>
</svg>
