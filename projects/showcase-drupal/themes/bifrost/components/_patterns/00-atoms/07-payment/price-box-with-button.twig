<div class="align-items-center d-flex justify-content-between {{ class|default('') }}">
    <div class="">
        {% include '@atoms/07-payment/price-box.twig' %}
        <p class="font-weight-normal small mb-0 {{ priceBoxSubInfosClass|default('') }}">{{ priceBoxSubInfosLabel|default('You save each months: <strong>124,34$</strong>')|raw }}</p>
    </div>

    <div class="ml-md-5">
        {% include '@atoms/04-links/01-link-button.twig' with {
            id: buttonId ~ '-desktop'|default("stickyNavContinuBtn"),
            class:"js-stickyPriceBar__btn color--dark js-dxp-btn-desktop d-none d-lg-block ",
            buttonColor: "primary",
            label: buttonLabel|default("Confirm"),
            href: buttonHref|default(""),
            extraAttribute: buttonExtraAttributes|default(''),
        } only %}
        {% include '@atoms/04-links/01-link-button.twig' with {
            id: buttonId ~ '-mobile'|default("stickyNavContinuBtn"),
            class:"js-stickyPriceBar__btn color--dark js-dxp-btn-mobile d-lg-none",
            buttonColor: "primary",
            label: buttonLabel|default("Confirm"),
            href: buttonHref|default(""),
            extraAttribute: buttonExtraAttributes|default(''),
        } only %}
    </div>
</div>
