<div class="form-group form-checkbox {{ class|default('') }}">
    <input type="checkbox"
           {% if isDisabled is defined and isDisabled is same as (true) %}disabled {% endif %}
            {% if isChecked is defined and isChecked is same as (true) %}checked {% endif %}
           id="{{ inputId|default('checboxDefault') }}"
           class="sr-only form-checkbox__input"
           name="{{ inputName|default('') }}"
           {{ extraAttribute|default(NULL) }}>

    <label for="{{ inputId|default('checboxDefault') }}" class="form-checkbox__label" {{ labelExtraAttribute|default(NULL) }}>
        <p class="mb-0">{{ label|default('Label')|raw }}</p>
    </label>
</div>
