<div class="card p-3 p-md-4 py-lg-4 px-lg-6 bg-primary {{ class|default('') }}">
    <div class="row px-4 px-lg-0 " data-animate="fade-in">
        <div class="d-flex align-items-center col-md-3 pr-md-4 pr-lg-6 border-bottom-gray-md--0 border-right-md--dark mb-4 mb-md-0">
            <div class="d-flex">
                <h3>{{ title|default('House') }}</h3>
            </div>
        </div>

        <div class="col-md-9 pl-md-4 pl-lg-6">
            {% block overview_content %}
                <div class="row align-items-center">
                    <div class="order-1 order-md-2 col-12 col-md-6 col-lg-4 mb-4 mb-md-0">
                        {% include '@atoms/07-payment/price-box.twig' with {
                            priceClass:"",
                            priceDollar: "136",
                            priceCent:"34",
                            priceBoxAlignement:"left"
                        } %}
                        <p class="mb-0 small">To be paid for account : <strong>{{ accountNumber|default('800000205256')|raw }}</strong></p>
                    </div>

                    <div class="order-3 order-md-3 col-12 col-md-6 col-lg-4">
                        <p class="font-weight-bold mb-1">Payment</p>
                        <p class="mb-2 small">{{ balanceTxt|default('Due on October 26 2017')|raw }}</p>
                        <p class="mb-0 small font-italic">{{ paymentTxt|default('Le paiement sera efectif seulement à partir de 7h le lendemain')|raw }}</p>
                    </div>

                    <div class="order-4 col-lg-4 mt-4 mt-md-3 mt-lg-0 ">
                        <div class="d-flex flex-column">
                            {% include 'atoms-link-button-outline-with-icon' with {
                                class:"w-100 mb-2",
                                label:"View my invoice",
                                iconName: "external-link",
                                iconSize: 1,
                                target: "_blank'"
                            } only %}

                            <p class="small text-center mb-0">{{ linkDescriptionTxt|default('Vous serez redirigé vers..')|raw }}</p>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
</div>
