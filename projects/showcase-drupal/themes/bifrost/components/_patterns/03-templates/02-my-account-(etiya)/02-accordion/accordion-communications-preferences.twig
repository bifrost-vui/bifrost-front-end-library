                                        <p class="font-weight-medium m-0">Text</p>
                                    </div>
                                    <div class="col-6 col-md-12">
                                        {% include '@atoms/03-form/input-toggle-switch.twig' with { class:"m-0" } %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endblock %}
    {% endembed %}

    {# Preferences 2 ------------------------------------------------------ #}
