
<!-- Name credit card  -------------------------------- -->
<div class="{{ class|default('') }}">
    <div class="row">
        <div class="mb-3 col-md-6 col-lg-9">
            {% include '@atoms/03-form/input-with-label.twig' with { label:"Name on the credit card", inputId:"payment_creditCard", class:"" } %}
        </div>

        <div class="mb-3 col-md-6 col-lg-9">
            {% include '@atoms/03-form/input-with-label.twig' with { label:"Card number", inputId:"payment_creditCard", inputType:"number", class:"" } %}
        </div>
    </div>


    <div class="row">
        <div class="col-md-8 col-lg-6">
            {% include '@atoms/03-form/input-with-label.twig' with { label:"Date of expiration", inputId:"payment_date", inputType:"month", class:"mb-0" } %}
        </div>
        <div class="col-md-4 col-lg-3">
            {% include '@atoms/03-form/input-with-label.twig' with { label:"CCV", inputId:"payment_ccv", inputType:"number", class:"mb-0" } %}
        </div>
    </div>
</div>
