<!-- header-nav-videotron.twig -->
<header role="banner" class="position-relative z-index-18">
    <nav class="navbar navbar-light navbar--videotron-unify navbar-expand-lg p-0 bg-white border-bottom-gray--200 {{ class|default('') }}">
        <div class="d-flex flex-column flex-lg-row justify-content-between w-100">
            <!-- Navbar brand logo-->
            <div class="navbar__header-responsive" data-animate="fade-in">
                <div class="w-100 d-flex align-items-center justify-content-between h-100">
                    <div class="navbar-brand p-0 d-flex align-items-center h-100">
                        <a href="{{ hrefVideotronLogo|default('#') }}" class="navbar-brand__logo-videotron mr-2 d-flex align-items-center bg-primary d-flex align-items-center justify-content-center">
                            <img src="/images/logo/logo-videotron-icon.svg" alt="Videotron">
                        </a>
                        <a href="{{ hrefVideotronTextLogo|default('#') }}" class="d-block navbar-brand__logo-videotron-text">
                            <img src="/images/logo/logo-videotron-text.svg" width="122" height="23" alt="Videotron">
                        </a>
                    </div>

                    <div class="d-flex d-lg-none align-items-center">
                        {% for link in rigthIconLinks|default([]) %}
                            {% if link.href is not empty and link.icon is not empty %}
                                <a href="{{ link.href }}" class="link--no-decoration m-1">
                                    <img src="/images/icons/svg-atoms/{{ link.icon }}.svg" alt="" class="img-fluid">
                                </a>
                            {% endif %}
                        {% endfor %}

                        <!-- Mobile : btn account dropdown -->
                        {% include '@organisms/00-navigation-videotron-unify/btn-account.twig' with { class:"" } only %}

                        <!-- Mobile : btn mini cart -->
                        {% if hasMiniCartBtn is defined and hasMiniCartBtn is same as (true) %}
                            {% include '@organisms/00-navigation-videotron-unify/btn-minicart.twig' with { class:"" } only %}
                        {% endif %}

                        <!-- Mobile : btn search toggle -->
                        <button class="d-flex vui--style-reset minh-3 mr-2 pl-0 js-search-toggler-btn"
                                type="button"
                                data-toggle="collapse"
                                data-target="#navbarSearch"
                                aria-controls="navbarSearch"
                                aria-expanded="false">
                            {% include '@atoms/06-icons/icon-svg-search.twig' with {
                                iconName:"x",
                                iconSize:2,
                                iconClass:"icon-close m-1"
                            } %}
                        </button>

                        <div id="navbarSearch" class="alg-searchbox-mobile__container collapse pl-7 pl-md-10 w-100 z-index-10" role="search">
                            <div class="row d-flex align-items-center justify-content-between h-100">
                                <div class="col-12">
                                {% block globalSearchMobile %}
                                    {% include '@atoms/03-form/input-search-global.twig' with {
                                      class: 'mb-0 ml-2 rounded',
                                      iconColor: 'svg-fill--dark',
                                      inputClass: 'js-alg-searchbox-input py-1 py-md-3 border-gray--200',
                                      inputId: 'alg-searchbox-mobile',
                                      inputPlaceholder: 'What are you looking for?'|t,
                                      inputIconPosition: ' ',
                                    } %}
                                {% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="navbar--videotron-unify__main-nav js-collapse-full-height d-lg-flex align-items-center justify-content-between w-100" id="unifyNavbarVideotron">
                <!-- Main navigation -->
                <ul class="navbar-nav flex-row pl-lg-5 pr-lg-0 h-100 justify-content-start ml-lg-2" data-animate-row="">
                    {% block navbar_content %}
                        {% include '@organisms/00-navigation-videotron-unify/_31-header-nav-mega-menu--videotron-unify.twig' with {navItems:navItems} only %}
                    {% endblock %}
                </ul>

                <!-- Aside navigation -->
                <ul class="navbar-nav d-none d-lg-flex align-items-center mr-md-3" data-animate-row="">
                    {# MINI cart : Desktop version #}
                    {% if hasMiniCartBtn is defined and hasMiniCartBtn is same as (true) %}
                        <li class="nav-item px-1" data-animate="fade-in">
                            {% include '@organisms/00-navigation-videotron-unify/btn-minicart.twig' with { class:"" } only %}
                        </li>
                    {% endif %}

                    {% if hasNoSearchBtn is not defined or hasNoSearchBtn is same as (false) %}
                        <li class="nav-item mr-lg-0 pl-lg-1 ml-1 pr-0" data-animate="fade-in">
                          <div class="d-flex align-items-center justify-content-between w-100">
                            {% block globalSearch %}
                              {% include '@atoms/03-form/input-search-global.twig' with {
                                class: 'mb-0 ml-2 rounded',
                                iconColor: 'svg-fill--dark',
                                inputClass: 'js-alg-searchbox-input border-gray--200',
                                inputId: 'alg-searchbox',
                                inputPlaceholder: 'What are you looking for?'|t,
                                inputIconPosition: ' ',
                              } %}
                            {% endblock %}

                          </div>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

  {% if hasNoSearchBtn is not defined or hasNoSearchBtn is same as (false) %}
    <div class="align-items-center justify-content-between w-100">
      <div id="alg-hits" class="ais-Hits bg-white alg-hidden"></div>
    </div>
  {% endif %}

</header>
