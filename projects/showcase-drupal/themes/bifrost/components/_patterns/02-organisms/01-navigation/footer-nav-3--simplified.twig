{# DEMO purpose #}
{% if footer_links is not defined or footer_links is empty %}
    {% set footer_links = [
        { sectionTitle:'Discover' },
        { sectionTitle:'Shop'},
        { sectionTitle:'My Helix'},
        { sectionTitle:'Support' },
        { sectionTitle:'Ressources'},
    ] %}
{% endif %}

{# ------------------------------------------------------------------------------------------------------------------ #}

<!-- footer-nav-3--simplified.twig -->
<nav class="navbar--footer navbar-dark navbar-expand-lg border-bottom border-top py-0 py-lg-4 py-md-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-10 order-2 order-lg-1 d-flex flex-column flex-lg-row">
                {% for footer_link in footer_links %}
                    <div class="col-lg-2 border-top-gray--800 border-top-lg--0">
                        {# Desktop version #}
                        <h3 class="d-none d-lg-block py-0">
                            {% include '@atoms/04-links/link-default-optimized.twig' with {
                                href: "",
                                label: footer_link.sectionTitle,
                                class:""
                            } %}
                        </h3>

                        {# Mobile/Tablet version #}
                        <div class="py-3 d-lg-none">
                            <span class="navbar-brand mb-0">
                                {% include '@atoms/04-links/link-default-optimized.twig' with {
                                    href: "",
                                    label: footer_link.sectionTitle,
                                    class:"h5 "
                                } %}
                            </span>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="col-lg-2 order-1 order-lg-2 py-3 text-center">
                {% include '@atoms/04-links/link-back-to-top.twig' with {
                    label:"Back to top",
                    class:"link-back-to-top h6 font-weight-normal"
                } %}
            </div>
        </div>
    </div>
</nav>
