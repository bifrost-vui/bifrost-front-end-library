{% if count is not defined %}
  {% set count = 4 %}
  {% set images = [
    {imgSrc:"https://source.unsplash.com/400x400/?nature", imgAlt:"Here is my alt"},
    {imgSrc:"https://source.unsplash.com/400x400/?nature", imgAlt:"Here is my alt"},
    {imgSrc:"https://source.unsplash.com/400x400/?nature", imgAlt:"Here is my alt"},
    {imgSrc:"https://source.unsplash.com/400x400/?nature", imgAlt:"Here is my alt"},
  ] %}
{% endif %}

{# direction reverse = 'flex-row-reverse' #}

<div class="mosaic {{ mosaicClass|default('') }}">
  <div class="row no-gutters justify-content-end {{ direction|default('') }}">
    <div class="col-6 p-0">
      {% include '@atoms/11-images/img-lazy-load.twig' with {
        class: 'img-lazy-load-container--square d-block',
        src: images[0].imgSrc,
        alt: images[0].imgAlt
      } %}
    </div>
  </div>
  {% if count > 1 %}
    <div class="row no-gutters {{ direction|default('') }}">
      <div class="col-6 p-0">
        {% include '@atoms/11-images/img-lazy-load.twig' with {
          class: 'img-lazy-load-container--square d-block',
          src: images[1].imgSrc,
          alt: images[1].imgAlt
        } %}
      </div>
      {% if count > 2 %}
        <div class="col-6 p-0">
          {% include '@atoms/11-images/img-lazy-load.twig' with {
            class: 'img-lazy-load-container--square d-block',
            src: images[2].imgSrc,
          alt: images[2].imgAlt
          } %}
        </div>
      {% endif %}
    </div>
    {% if count > 3 %}
      <div class="row no-gutters {{ direction|default('') }}">
        <div class="col-6 p-0">
          {% include '@atoms/11-images/img-lazy-load.twig' with {
            class: 'img-lazy-load-container--square d-block',
            src: images[3].imgSrc,
            alt: images[3].imgAlt
          } %}
        </div>
      </div>
    {% endif %}
  {% endif %}
</div>
