<!-- sticky-offer-block.twig -->
<div class="vui--style-black p-0 border-bottom-gray--800 z-index-5">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-12 col-md-7 col-lg-8 mt-2 pt-4 mt-md-0 pt-md-0 pb-3 pb-md-0">
                <p class="h3 align-middle color--vui-yellow mb-0 py-md-2 my-md-3 mr-md-4">{{ tagLine|default("Get Early Access") }} 
                {% if tagLineService is defined and tagLineService is not empty %}
                  <span class="color--light d-block d-lg-inline mb-lg-3 ml-lg-3">{{ tagLineService|default("Internet 60 + Internet All Included") }}</span>
                {% endif %}
                </p>
            </div>

            <div class="col-12 col-md-5 col-lg-4 d-flex border-left-gray-md--800 align-items-center align-self-stretch justify-content-md-center">
                <div class="row w-100">
                    <div class="col-7 col-md-8 col-lg-6 d-flex justify-content-md-center">
                      {% include '@atoms/07-payment/price-box--simplified.twig' with { pricePaymentPlanClass:'mb-0' } %}
                    </div>
                    <div class="col-5 col-md-4 col-lg-6 d-flex align-items-center justify-content-center">
                        {% include '@atoms/04-links/00-link.twig' with {
                            class: "link--no-decoration btn btn-primary btn-small text-dark"
                        } %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
