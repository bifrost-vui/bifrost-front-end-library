<div>
    <p class="h3 font-weight-light mb-4">Fill the address by filling the inputs below</p>

    <div class="row align-items-end mb-3">
        <div class="col-6 col-md-2">
            {% include '@atoms/03-form/input-with-label.twig' with {
                label:"Postal code",
                labelClass:"",
                inputId:"search_postalCode",
                inputClass:"mt-2 form-control-lg",
                class: "mb-0",
            } %}
        </div>

        {#<div class="col-6 col-md-9 pl-md-1">#}
            {#{% include '@atoms/02-buttons/00-button.twig' with { buttonLabel:"Check", buttonType:"Submit", buttonSize:"lg", buttonClass:"mt-2 disabled btn--condensed" } %}#}
        {#</div>#}
    </div>

    <div class="row mb-3">
        <div class="col-md-8">
            {% include '@atoms/03-form/input-with-label.twig' with {
                label:"Street name",
                inputId:"search_streetName",
                inputClass:"mt-2 form-control-lg",
                class: "mb-0",
            } %}
        </div>
        <div class="col-md-4">
            {% include '@atoms/03-form/input-with-label.twig' with {
                label:"City",
                inputId:"search_city",
                inputClass:"mt-2 form-control-lg",
                class: "mb-0",
            } %}
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-12 col-md-4">
            <div class="row">
                <div class="col-7">
                    {% include '@atoms/03-form/input-with-label.twig' with {
                        label:"Civic number",
                        labelClass:"",
                        inputId:"search_civixNumber",
                        inputClass:"mt-2 form-control-lg",
                        class: "mb-0",
                    } %}
                </div>
                <div class="col-5">
                    {% include '@atoms/03-form/input-with-label.twig' with {
                        label:"Suffix",
                        labelClass:"",
                        inputId:"search_suffix",
                        inputClass:"mt-2 form-control-lg",
                        class: "mb-0",
                    } %}
                </div>
            </div>

        </div>
        <div class="col-12 col-md-8">
            {% include '@atoms/03-form/input-with-label.twig' with {
                label:"Apt, suite, building",
                labelClass:"",
                inputId:"search_streetName",
                inputClass:"mt-2 form-control-lg",
                class: "mb-0",
            } %}
        </div>
    </div>

    <div class="mt-5 d-flex justify-content-end align-items-end">
        {% include '@atoms/04-links/link-underline.twig' with { label:"Cancel", headingSize: 5, class:"mr-3 p-3 mb-0" } %}
        {% include '@atoms/02-buttons/00-button.twig' with { buttonLabel:"Confirm", buttonType:"Submit", buttonSize:"lg", buttonClass:"btn-primary btn--condensed" } %}
    </div>

</div>
