{% extends "base-page.twig" %}

{% set footer = [
    {label:"Terme d'utilisation"},
    {label:"Vie privée"},
    {label:"Accessibilité"},
    {label:"EN"},
] %}

{# ------------------------------------------------------------------------------------------------------------------ #}

{% block page_header_nav %}
    <div class="d-flex justify-content-between pb-2 px-4 pt-4 p-md-0">
        <div class="">
            <a href="{{ videotronLink|default('#') }}">
                <img class="d-none d-md-block" src="/images/logo/videotron-no-padding.svg" alt="Logo Helix">
                <img class="d-block d-md-none" src="/images/logo/videotron-full.svg" alt="Logo Helix">
            </a>
        </div>
        <div class="p-0 p-md-4">
            <a href="{{ returnBtn|default('#') }}">
                {% include '@atoms/06-icons/icon-svg-x.twig' with { iconSize:'3' } %}
            </a>
        </div>
    </div>
{% endblock %}

{% block page_main_container %}
    <section>
        <div class="container-fluid mt-2 mt-md-3 mb-4 mb-md-8">
            <div class="d-flex flex-column flex-md-row splash splash--have-separator">
                <div class="splash__container">
                    {% include '@organisms/04-content/splash.twig' %}
                </div>
                <div class="splash__container d-none d-md-block">
                    {% include '@organisms/04-content/splash-helix.twig' %}
                </div>
            </div>
        </div>
    </section>

    <section class="splash__container bg--dark d-block d-md-none">
      <div class="container-fluid py-4">
        {% include '@organisms/04-content/splash-helix.twig' with { splashColor:'dark' } %}
      </div>
    </section>
{% endblock %}

{% block page_footer %}
    <div class="bg-gray--100 d-flex justify-content-between">
      <div class="container-fluid">
          <div class="d-flex flex-column flex-md-row justify-content-between">
              <div class="order-2 order-md-1 pb-4 pt-3 py-md-0">
                  <p class="m-0 my-md-4">&copy; Videotron {{ now|date('Y') }}</p>
              </div>
              <div class="align-self-start align-self-md-center order-1 order-md-2 pt-4 py-md-0">
                  <ul class="list-reset d-flex mb-0 flex-wrap pl-0">
                      {% for link in footer %}
                          <li class="pb-2 pb-md-0">{% include '@atoms/04-links/link-hover.twig' with { href:link.href, label:link.label, class:"pr-3 pr-md-5 mb-0" } %}</li>
                      {% endfor %}
                  </ul>
              </div>
          </div>
      </div>
    </div>
{% endblock %}
