{% extends "base-page--funnel.twig" %}

{% set page_hero_title = "Manage Your Communication Preferences" %}
{% set page_hero_subtitle = "Get updates on the topics that interest you" %}

{% set hasTermsAndConditions = true %}
{% set hasNoLegalBar = true %}

{# ------------------------------------------------------------------------------------------------------------------ #}
{% block page_header_nav %}
    {% include 'organisms-header-nav-helix--funnel-myaccount' with {
        label:"Back to Helix",
        href: ""
    } %}
{% endblock %}

{% block page_main_container %}
    <section class="py-section">
        <div class="container-fluid">
            <div class="mb-6">
                <h2 class="mb-2">Which notifications do you want to unsubscribe?</h2>
                <p>The items selected below are emails you are currently subscribed to. To unsubscribe from an e-mail, please turn off the toggle next to the email you no longer wish to receive.</p>
            </div>

            <div class="mb-4 card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-md-8 col-lg-10 mb-3 mb-md-0">
                            <h3 class="mb-0">Email Preferences for: <span class="font-weight-medium">John.Doe2@gmail.com</span></h3>
                        </div>
                        <div class="d-none d-md-block col-md-4 col-lg-2 text-right">
                            <h3 class="mb-0">Email</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% for i in 1..6 %}
                        {% if loop.last is not same as (true) %}
                            {% set rowClass = "mb-4" %}
                        {% else %}
                            {% set rowClass = "" %}
                        {% endif %}

                        <div class="row {{ rowClass|default('') }}">
                            <div class="col-md-8 col-lg-10">
                                <p class="m-0">
                                    <span class="font-weight-bold">Information, latest products and special offers</span>
                                    <br>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet atque dolore excepturi.
                                </p>
                            </div>
                            <div class="col-md-4 col-lg-2">
                                <div class="border-bottom border-bottom-md--0 d-md-flex justify-content-end mb-md-0 mt-3 pb-3 pb-md-0">
                                    <div class="row">
                                        <div class="col-6 d-md-none d-flex align-items-center justify-content-center">
                                            <p class="font-weight-medium m-0">Email</p>
                                        </div>
                                        <div class="col-6 col-md-12">
                                            {% include '@atoms/03-form/input-toggle-switch.twig' with { class:"m-0", isChecked:true } %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="d-flex flex-column flex-md-row justify-content-end">
                {% include '@atoms/02-buttons/10-button-outline.twig' with {
                    buttonLabel: "Unsubscribe from all",
                    buttonClass: "w-100--mobile-only mr-2 mb-2 mb-md-0"
                } %}

                {% include '@atoms/04-links/01-link-button.twig' with {
                    class:"w-100--mobile-only",
                    label: "Save changes",
                    href: "/patterns/04-Pages-02-my-account-(etiya)-13-unsubscribe-confirmation/04-Pages-02-my-account-(etiya)-13-unsubscribe-confirmation.html"
                } only %}
            </div>
        </div>
    </section>
{% endblock %}