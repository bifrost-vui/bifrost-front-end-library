<section class='bf-section-tiles-ksp bf-color-bg-ground {{ reversed ? 'reversed' }} {{ class|default('') }}'>
	<div class='container-fluid py-5'>
		<h1 class='h2 mb-4'>{{ title }}</h1>

		<ul class='d-flex flex-column flex-md-row flex-wrap list-unstyled'>
			{% for tile in tiles %}
				<li class='flex-1' style='min-width: 14rem'>
					{% set tile = tile|merge({ class: 'h-100' }) %}
					{% include '@bf-components/tile-ksp/twig/index.twig' with tile %}
				</li>
			{% endfor %}
		</ul>
	</div>
</section>