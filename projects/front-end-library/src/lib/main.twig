<html class='loaded-end'>
    <head>
        
        {#  ---------------------------------------------------------------
            NOTE: To avoid cache in Storybook, we need to dynamically load styles and scripts
        #}

        <script>
            const link = document.createElement('link');
            link.rel = 'stylesheet';
            link.type = 'text/css';
            link.href = '/css/bifrost.css';
            document.getElementsByTagName('HEAD')[0].appendChild(link);
        </script>
        
        <script>
            async function load() {
                await import('/js/core.js');
                await import('/js/vendors~bifrost-components.js');
                await import('/js/bifrost-components.js');
            }
        </script>

        <style>
            {# [data-animate] {
                opacity: 1!important;
            } #}
            
            pre {
                background-color: transparent;
            }
        </style>

        {#  --------------------------------------------------------------- #}
    </head>
    <body>
        <main>

            {# For DEBUG puropose: #}
            {# {{ dump(_context) }} #}
            
                {% if _context.elementPath is defined %}
                    
                    {% set elementPath = _context.elementPath %}

                    <div class='videotron-ui'>
                        {# <div class='h-100 w-100'> #}
                            {% include './' ~ elementPath ~ '.twig' with _context %}
                        {# </div> #}
                    </div>
                    
                {% else %}

                    <p>Please provide a <b>elementPath</b> properties in URL. </p>
                    <p>E.g. http://localhost:3001/api/twig?elementPath=components/button/twig/button</p>
                    <pre>{{ dump(_context) }}</pre>
                {% endif %}
            
        </main>
    </body>

    <script>load();</script>

</html>


