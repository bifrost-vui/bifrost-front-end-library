<footer
  class="bf-footer {{ reversed|default(false) ? "reversed" }} {{
  isReduced|default(false)
    ? "bf-footer--reduced"
  }}"
  {{ theme is defined ? "data-theme='" ~ theme ~ "'" }}
>
  {% if isReduced is not defined or isReduced is not same as(true) %}
    {% include "@bf-components/navigation-footer/twig/footer-main.twig" %}
  {% endif %}
  {% include "@bf-components/navigation-footer/twig/footer-legal.twig" %}
</footer>
