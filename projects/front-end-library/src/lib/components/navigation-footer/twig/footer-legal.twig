
<nav class="bf-footer-legal py-4">
    <div class="container-fluid">
        {% if hasBackToTopLink is defined and hasBackToTopLink is same as (true) %}
            <div class="d-flex justify-content-center justify-content-md-end w-100 mb-5 mb-md-4">
                {% include '@bf-components/link/twig/back-to-top.twig' with {
                    label:"Back to top",
                    class:"h6 mb-0"
                } %}
            </div>
        {% endif %}

        <div class="row">
            <div class="col-12 col-md-3 order-2 order-md-1 py-0 mt-2 pt-4 mt-md-0 pt-md-0" data-animate="fade-in">
                <div class="d-flex flex-row align-items-start">
                    <a href="{{ logo.href|default('#') }}">
                        {% include '@bf-components/logo/twig/index.twig' with {
                            name        : logo.name,
                            size        : 'small',
                            langcode    : langcode|default('EN'),
                            reversed    : reversed,
                        } only %}
                    </a>
                </div>
                <p class="m-0 mt-2 bf-p-medium bf-color-neutral-secondary">&copy; {{ videotronLegalName|default('Videotron') }} {{ now|date('Y') }}</p>
            </div>

            <div class="col-12 col-md-9 order-1 order-md-2">
                <ul class="list-reset pl-0 mb-0 d-flex flex-wrap justify-content-start justify-content-lg-end" data-animate-row="">
                    {% for linkField in linkFields %}
                        <li class="mb-3 pr-4 mb-md-0" data-animate="fade-in">
                            {% include '@bf-components/link/twig/index.twig' with {
                                href:linkField.href,
                                label:linkField.label,
                                class:"bf-p-small bf-color-neutral-secondary",
                                rel:linkField.rel|default("dofollow")
                            } %}
                        </li>
                    {% endfor %}

                    {% if languageBlock is defined %}
                        {{ languageBlock }}
                    {% else %}
                        <li class="mb-3 mb-md-0" data-animate="fade-in">
                            {% include '@bf-components/link/twig/index.twig' with {
                                href:"",
                                label:"FR",
                                class:"bf-p-small bf-color-neutral-secondary",
                            } %}
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
</nav>
