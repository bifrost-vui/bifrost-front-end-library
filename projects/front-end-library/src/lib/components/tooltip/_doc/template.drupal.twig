{# Default Variables (Props, Controls) #}
{% set _reversed = _reversed|json_parse %}
{% set class = class|json_parse %}
{% set id = id|json_parse %}
{% set label = label|json_parse %}

{# Arrays of Classes With Dynamic Elements #}
{% set mainContainerClasses = [
  "d-flex flex-column flex-md-row justify-content-center minh-100",
  (_reversed ? "reversed bf-color-bg-ground"),
] %}

{# Template #}
<div class="{{ mainContainerClasses|join(' ')|trim }}">
  {% for index in [1, 2] %}

    {# In Loop : Boolean Variables #}
    {% set isReversed = index == 2 and _reversed is not defined %}

    {# In Loop : Arrays of Classes With Dynamic Elements #}
    {% set innerContainerClasses = [
      "flex-grow-1 d-flex flex-column align-items-center justify-content-center minh-100",
      (isReversed ? "reversed bf-color-bg-ground"),
    ] %}

    <div class="{{ innerContainerClasses|join(' ')|trim }}">

      {% set tooltipsData = [
        {
          placement: "top",
          text: "Tooltip on top",
        },
        {
          placement: "bottom",
          text: "Tooltip on bottom",
        },
        {
          placement: "left",
          text: "Tooltip on left",
        },
        {
          placement: "right",
          text: "Tooltip on right",
        },
      ] %}

      {% for tooltip in tooltipsData %}
        <div class="flex-grow-1 d-flex flex-column align-items-center justify-content-center p-6">
          <h3 class="mb-0">
            {{ tooltip.text }}
          </h3>
          {% include "@bf-components/tooltip/twig/index.twig" with {
              class: class|default(""),
              id: id|default(""),
              placement: placement|default(tooltip.placement),
              text: text|default(tooltip.text),
          } only %}
        </div>
      {% endfor %}

    </div>

  {% endfor %}

</div>
