{# Default Variables (Props, Controls) #}
{% set _reversed = _reversed|json_parse %}
{% set buttonIcon = buttonIcon|json_parse %}
{% set class = class|json_parse %}
{% set id = id|json_parse %}
{% set isReversed = isReversed|json_parse %}
{% set placement = placement|json_parse %}
{% set text = text|json_parse %}

{# Arrays of Classes With Dynamic Elements #}
{% set mainContainerClasses = [
  "d-flex flex-column flex-md-row justify-content-center minh-100",
  (_reversed ? "reversed bf-color-bg-ground"),
] %}

{# Template #}
<div class="{{ mainContainerClasses|join(' ')|trim }}">
  {% for index in [1, 2] %}

    {# In Loop : Boolean Variables #}
    {% set isTemplateReversed = index == 2 and _reversed is not defined %}

    {# In Loop : Arrays of Classes With Dynamic Elements #}
    {% set innerContainerClasses = [
      "position-relative flex-grow-1 d-flex flex-column align-items-center justify-content-center minh-100",
      (isTemplateReversed ? "reversed bf-color-bg-ground"),
    ] %}

    <div class="{{ innerContainerClasses|join(' ')|trim }}">

      {% set tooltipsData = [
        {
          title: "Tooltip - automatic placement",
          placement: "auto",
          text: "Tooltip content must be between 0 a 250 characters. Less is more in this type of component.",
        },
        {
          placement: "top",
          text: "Tooltip on top",
        },
        {
          placement: "bottom",
          text: "Tooltip on bottom",
        },
        {
          placement: "left",
          text: "Tooltip on left",
        },
        {
          placement: "right",
          text: "Tooltip on right",
        },
      ] %}

      {% for tooltip in tooltipsData %}
        <div class="flex-grow-1 d-flex flex-column align-items-center justify-content-center p-6">
          <h3 class="mb-0">
            {{ tooltip.title|default(tooltip.text) }}
          </h3>
          {% include "@bf-components/tooltip/twig/index.twig" with {
              buttonIcon: buttonIcon|default(""),
              class: class|default(""),
              id: id|default(""),
              isReversed: isReversed is same as(false) and index == 2 ? true : isReversed,
              placement: placement is same as("auto") ? tooltip.placement : placement,
              text: text|default(tooltip.text),
          } only %}
        </div>
      {% endfor %}

    </div>

  {% endfor %}

</div>
