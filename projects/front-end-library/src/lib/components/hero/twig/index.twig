
{% set hasDesktopImage = (image.default is defined and image.default) ? true : false %}
{% set isBgImageFull = (image.isBgFull and hasDesktopImage) ? true : false  %}
{% set is50Percent = (isBgImageFull is same as (false) and hasDesktopImage ) ? true : false  %}
{% set hasBlocSelection =((blockSelection is defined and blockSelection is iterable) or (block('blockSelection') is defined)) ? true : false %}
{% set hasRightContent =  (is50Percent or hasBlocSelection) ? true : false %}

{% if hasRightContent and background is defined and background is same as ('highlight') and reversed %}
    {% set reversed = '' %}
{% elseif background is defined and background is same as ('highlight') and reversed  and isBgImageFull is same as (false) %}
    {% set reversed = '' %}
{% else %}
    {% set reversed = (reversed) ? 'reversed' : '' %}
{% endif %}

<section
    class='
        bf-hero
        {{ (isBgImageFull) ? 'bf-hero--full-background' : '' }}
        {{ (hasRightContent ) ?  '' : 'bf-hero--no-right-content' }}
        {{ (is50Percent) ? 'bf-hero--50-50':''}}
        {{ (hasBlocSelection) ? 'bf-hero--block-selection':'' }}
        {{ reversed }}
        {% if background is defined and background is same as ('ground') %}bf-hero--bg-ground{% endif %}
        {% if background is defined and background is same as ('highlight') %}bf-hero--bg-highlight{% endif %}
        {{ (reversed) ? 'reversed' : '' }}
        {{ class|default('') }}'
        {% if isBgImageFull %}
            style='background-image: url("{{ image.default }}")'
        {% endif %}
    >
    <div class='bf-hero__content d-flex flex-column flex-md-row align-items-center justify-content-between pb-2 pb-sm-4' data-animate-row=''>
        <header>
            {# Where "block('breadcrumb')" is a twigBlock and "breadcrumb" is an html string #}
            {% if block('breadcrumb') is defined %}
                {{ block('breadcrumb')|raw }}
            {% elseif breadcrumb is defined %}
                {{ breadcrumb|raw }}
            {% endif %}

            <div class='position-relative py-5 mt-2'>
                {% if badge is defined and badge is not empty %}
                    {% if badge is iterable %}
                        {% set badge = {
                            label       : badge.label,
                            hierarchy   : badge.hierarchy|default('primary'),
                            angle       : badge.angle|default(''),
                            iconName    : badge.iconName|default(''),
                        } %}
                    {% else %}
                        {% set badge = { label: badge } %}
                    {% endif %}
                    {% set badge = badge|merge( {
                        'hierarchy' : badge.hierarchy|default('primary'),
                        'class'     : 'position-absolute top-0'
                    } ) %}
                    {% include '@bf-components/badge/twig/index.twig' with badge only %}
                {% endif %}
                {% if upperTitle is defined and upperTitle is not empty %}
                    <p class='h5 mt-0 mb-2' data-animate='fade-in'>
                        {{ upperTitle }}
                    </p>
                {% endif %}
                {% if title is defined and title is not empty %}
                    <h1 class='mt-0' data-animate='fade-in'>
                        {{ title }}
                    </h1>
                {% endif  %}
                {% if subtitle is defined and subtitle is not empty %}
                    <h2 class='h3 my-2' data-animate='fade-in'>
                        {{ subtitle }}
                    </h2>
                {% endif  %}
                {% if description is defined and description is not empty %}
                    <p class='mt-2' data-animate='fade-in'>
                        {{ description }}
                    </p>
                {% endif %}
                {% if price is defined and price %}
                    {% set price = price|merge({
                        'class'     : 'w-100 mt-4 ' ~ price.class,
                        'language'  : price.language|default(language)
                    }) %}
                    {% include '@bf-components/price/twig/index.twig' with price only %}
                {% endif %}
                {% if button is defined and button is not empty %}
                    <div class='mt-5' data-animate='fade-in'>
                        {% set button = button|merge( { 'hierarchy': button.hierarchy|default('primary-alt') } ) %}
                        {% include '@bf-components/button/twig/index.twig' with button only %}
                    </div>
                {% endif %}
            </div>
        </header>
    </div>

    {% if hasRightContent %}
    <div  data-animate='fade-in' class='bf-hero__right'
        {% if is50Percent %}
             style='background-image : url({{ image.default }})'
        {% endif %}
    >
        {% if image is defined and image.mobile is defined and image.mobile is not empty %}
            <img src='{{ image.mobile }}' alt='{{ image.alt|default('') }}' class='w-100 d-block d-md-none' />
        {% endif %}

        {% if block('blockSelection') is defined %}

            {{ block('blockSelection') }}

        {% elseif blockSelection is defined and blockSelection is iterable %}
            {% include '@bf-components/block-selection/twig/index.twig' with blockSelection only %}
        {% endif %}
    </div>

    {% endif %}




</section>
