{# Retrocompatibility with Ui-Kit legacy #}
{% if inputId is defined and inputId %}
  {% set id = inputId %}
{% endif %}

{% if inputName is defined and inputName %}
  {% set name = inputName %}
{% endif %}

<div class='bf-input-checkbox {{ class|default('') }} {{ (isInvalid is defined and isInvalid) ? 'bf-input-checkbox--invalid' }} {{ (isDisabled is defined and isDisabled) ? 'bf-input-checkbox--disabled' }}'>
  <input type='checkbox' class='bf-checkbox {{ (isInvalid is defined and isInvalid) ? 'bf-checkbox--invalid' }}'
    {% if name is defined and name %} name='{{ name }}' {% endif %}
    id='{{ id }}'
    {% if value is defined and value %} value='{{ value }}' {% endif %}
    {{ (isChecked is defined and isChecked) ? 'checked' }}
    {{ (isDisabled is defined and isDisabled) ? 'disabled' }}
    {{ (isRequired is defined and isDisabled) ? 'required' }}
    {% if ariaLabel is defined and ariaLabel %}
      aria-label='{{ ariaLabel }}'
    {% endif %}
    {{ extraAttribute|default(NULL) }}
  >
  {% if label is defined and label %}
    <label for='{{ id }}' class='bf-text-display-sub-medium {{ labelClass|default('') }}' {{ labelExtraAttribute|default(NULL) }}>
      {{ label|raw }}
    </label>
  {% endif %}
</div>