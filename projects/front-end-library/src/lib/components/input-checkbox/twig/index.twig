<div class='bf-input-checkbox  {{ class|default('') }} {{ isInvalid ? 'bf-input-checkbox--invalid' }}'>
  <input type="checkbox" class='bf-checkbox {{ isInvalid ? 'bf-checkbox--invalid' }}'
    {% if inputName is defined and inputName %} name='{{ inputName }}' {% endif %}
    id='{{ inputId }}'
    {% if value is defined and value %} value='{{ value }}' {% endif %}
    {{ isChecked ? 'checked' }}
    {{ isDisabled ? 'disabled' }}
    {{ isRequired ? 'required' }}
    {% if ariaLabel is defined and ariaLabel %}
      aria-label='{{ ariaLabel }}'
    {% endif %}
    {{ extraAttribute|default(NULL) }}
  >
  {% if label is defined and label %}
    <label for="{{ id }}" class='bf-text-display-sub-medium {{ labelClass|default('') }}' {{ labelExtraAttribute|default(NULL) }}>
      {{ label|raw }}
    </label>
  {% endif %}
</div>