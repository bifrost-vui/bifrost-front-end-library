{% set class = 'bf-input-checkbox ' ~ class|default(null) %}
{% set isLabelLegend = true %}

{% extends '@bf-components/input/twig/index.twig' %}
  {% block inputContent %}
    {% if options is defined and options is not empty %}
      {% if isOptionTiles|default(false) %}
        <ul class='list-unstyled d-flex flex-column gap-2 mb-0'>
          {% for option in options %}
            {% set option = option|merge({
              'type': 'checkbox',
              'name': name
            }) %}
            {% include '@bf-components/selection-tile/twig/index.twig' with option only %}
          {% endfor %}
        </ul>
      {% else %}
        <ul class='list-unstyled d-flex flex-column gap-2 mb-0'>
          {% for option in options %}
            {% set option = option|merge({
              'name': name
            }) %}
            {% include '@bf-components/input-checkbox-option/twig/index.twig' with option only %}
          {% endfor %}
        </ul>
      {% endif %}
    {% endif %}
 {% endblock %}