{% set hasAsterisk      = hasAsterisk|json_parse %}
{% set reversed         = reversed|json_parse %}

<div class='d-flex flex-column flex-sm-row justify-content-center minh-100 {% if reversed %}reversed bf-color-bg-ground{% endif %}'>
    {% for index in [1,2] %}

        <div class='flex-grow-1 d-flex flex-column align-items-center justify-content-center minh-100 p-4 {% if index == 2 and reversed is not defined %}reversed bf-color-bg-ground{% endif %}'>
                
            {% include '@bf-components/price/twig/index.twig' %}

            {% include '@bf-components/price/twig/index.twig' with {
                size : size|default('md')
            } %}

            {% include '@bf-components/price/twig/index.twig' with {
                size : size|default('lg')
            } %}

            {% include '@bf-components/price/twig/index.twig' with {
                language : 'fr'
            } %}

            {% include '@bf-components/price/twig/index.twig' with {
                size : size|default('md'),
                language : 'fr'
            } %}

            {% include '@bf-components/price/twig/index.twig' with {
                size : size|default('lg'),
                language : 'fr'
            } %}

        </div>

    {% endfor %}
</div>
