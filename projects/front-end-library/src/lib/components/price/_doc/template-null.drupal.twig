{% set upfront = upfront|json_parse %}
{% set hasAsterisk = hasAsterisk|json_parse %}
{% set promotion = promotion|json_parse %}
{% set dollar = dollar|json_parse %}
{% set cent = cent|json_parse %}
{% set reversed = reversed|json_parse %}
{% set fullWidth = fullWidth|json_parse %}

<div
  class="d-flex flex-column flex-sm-row justify-content-center minh-100 {{
  reversed
    ? "reversed bf-color-bg-ground"
  }}"
>
  {% for index in [1, 2] %}
    <div
      class="flex-grow-1 d-flex flex-column align-items-center justify-content-center minh-100 pb-4 {{
      index == 2 and reversed is not defined
        ? "reversed bf-color-bg-ground"
      }}"
    >
      {% include "@bf-components/price/twig/index.twig" with {
        upperTitle: null,
        upfront: {
          label: null,
          dollar: null
        },
        dollar: null,
        dollarClass: null,
        cent: null,
        hasAsterisk: null,
        details: null,
        promotion: {
          title: null,
          priceStriked: null,
          priceSaved: null,
          savedLabel: null,
          superscript: null,
          direction: null
        },
        message: null,
        class: null
      } only %}
    </div>
  {% endfor %}
</div>
