{% set hasLabels =  labelOff is defined and labelOff and labelOn is defined and labelOn %}
  <input
    class='bf-switch {% if size is defined and size %} bf-switch--{{ size|default('sm') }}{% endif %}{{ isInvalid ? 'isInvalid' }} '
    id='{{ id }}'
    name='{{ name|default('')}}'
    type='checkbox'
    {{ isDisabled ? 'disabled aria-disabled="true"' }}
    {{ isChecked ? 'checked aria-checked="true"' }}
    {{ extraAttribute|default(NULL) }}
    {% if ariaLabel is defined and ariaLabel %}
      aria-label='{{ ariaLabel }}'
    {% endif %}
    {% if hasLabels is defined and hasLabels %}
      {% if labelOff is defined and labelOff %}
        data-status-off = '{{ labelOff }}'
      {% endif %}
      {% if labelOn is defined and labelOn %}
        data-status-on = '{{ labelOn }}'
      {% endif %}
    {% endif %}
  >