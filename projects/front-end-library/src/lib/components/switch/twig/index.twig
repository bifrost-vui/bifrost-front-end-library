{# UI-Kit - Legacy #}
{% set hasLabels = (labelOff is defined and labelOff) and (labelOn is defined and labelOn)  %}
{% set id = id|default(inputId) %}
{% set name = name|default(inputName) %}
{% set size = size|default(inputSize) %}

<div class='bf-switch {% if size is defined and size %} bf-switch--{{ size|default('sm') }}{% endif %} {{ class|default('') }}'>
  <div class="d-block position-relative overflow-hidden">
    <input
      class='bf-switch__input {{ (isInvalid is defined and isInvalid) ? 'invalid' }} '
      id='{{ id }}'
      name='{{ name|default('')}}'
      type='checkbox'
      {{ (isDisabled is defined and isDisabled) ? 'disabled aria-disabled="true"' }}
      {{ (isChecked is defined and isChecked ) ? 'checked aria-checked="true"' }}
      {{ extraAttribute|default(NULL) }}
      {% if ariaLabel is defined and ariaLabel %}
        aria-label='{{ ariaLabel }}'
      {% endif %}
    >

    {% if hasLabels and (hasNolabel is not defined or hasNolabel is same as(false) ) %}
      <div class="bf-switch__labels">
        <div class="w-100 text-left">{{ labelOn|default('On') }}</div>
        <div class="w-100 text-right">{{ labelOff|default('Off') }}</div>
      </div>
    {% endif %}
  </div>
</div>