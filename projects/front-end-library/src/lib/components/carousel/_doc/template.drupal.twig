{% set card = {
  badgeColor: "dark",
  image: {
    src: "/images/_docs/abstract-background.png",
    alt: "iPhone 12 Mini",
    badgeIconName: "security"
  },
  title: "iPhone 12 Mini",
  detailsColors: [
    {
      value: "4B4A46",
      name: "Lorem"
    },
    {
      value: "2C4651",
      name: "Ipsum"
    },
    {
      value: "D4BBA5",
      name: "Dolor"
    },
    {
      value: "C0C0C0",
      name: "Amet"
    }
  ],
  detailsStorage: ["128 Go", "256 Go"],
  price: {
    upperTitle: "From",
    dollar: "86",
    cent: "99",
    details: "/month"
  },
  note: "Plan + Phone: from $150/month (24 months)<br/>No upfront payment",
  buttons: [
    {
      label: "Configurate",
      hierarchy: "primary-alt",
      href: "www.videotron.com"
    }
  ]
} %}

<div class="container-fluid py-5">
  <div class="bf-carousel js-bf-carousel-demo {{ class|default("") }}">
    {% for index in 1..8 %}
      {% set card =
        card|merge({
          title: random(
            [
              "iPhone 12 Mini",
              "Morbi leo risus, porta ac consectetur ac, vestibulum at eros. Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor."
            ]
          )
        })
      %}
      {% include "@bf-components/card/twig/phone.twig" with card only %}
    {% endfor %}
  </div>
</div>

