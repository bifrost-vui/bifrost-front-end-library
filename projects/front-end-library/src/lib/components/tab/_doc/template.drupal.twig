{% set navItems    = navItems|json_parse %}
{% set reversed    = reversed|json_parse %}
{% set orientation = orientation|json_parse %}


<div class='d-flex flex-column justify-content-center minh-100'>
 {% for index in [1,2] %}

        <div class='flex-grow-1 d-flex align-items-center justify-content-center minh-100 py-4  bf-color-bg-ground {% if index == 2 %} reversed {% endif %}'>

            {% include '@bf-components/tab/twig/index.twig' %}

        </div>
        <div class='flex-grow-1 d-flex align-items-center justify-content-center minh-100 py-4 bf-color-bg-underground {% if index == 2  %} reversed {% endif %}'>

            {% include '@bf-components/tab/twig/index.twig' %}

        </div>

{% endfor %}
</div>


<script>
    function init() {
        document.querySelectorAll('.nav-link').forEach(item => {
            item.addEventListener('click', event => {
                event.preventDefault();
            })
        })
    }
    init();
</script>