{# Retrocompatibility with Ui-Kit legacy #}
{% if inputId is defined and inputId %}
  {% set id = inputId %}
{% endif %}

{% if inputName is defined and inputName %}
  {% set name = inputName %}
{% endif %}

{% if labelTxtClass is defined and labelTxtClass %}
  {% set labelClass = labelTxtClass %}
{% endif %}

<div class='bf-input-radio {{ isInvalid ? 'bf-input-radio--invalid' }} {{ isDisabled ? 'bf-input-radio--disabled' }} {{ class }}'>
  <input
    class='bf-radio {{ isInvalid ? 'bf-radio--invalid' }}'
    type='radio'
    id='{{ id }}'
    {% if name is defined and name %}
      name='{{ name }}'
    {% endif %}
    {% if value is defined and value %}
      value='{{ value }}'
    {% endif %}
    {{ (isChecked is defined and isChecked) ? 'checked' }}
    {{ (isDisabled is defined and isDisabled) ? 'disabled' }}
    {{ (isRequired is defined and isDisabled) ? 'required' }}
    {% if ariaLabel is defined and ariaLabel %}
      aria-label='{{ ariaLabel }}'
    {% endif %}
    {{ extraAttribute|default(NULL) }}
  />
  {% if label is defined and label %}
    <label for='{{ id }}' class='bf-text-display-sub-medium {{ labelClass|default('') }}'>{{ label|raw }}</label>
  {% endif %}
</div>