{% set class = 'bf-input-radio ' ~ class|default(null) %}
{% set isLabelLegend = true %}
{% set optionTilesOrientation = optionTilesOrientation|default('horizontal') %}

{% extends '@bf-components/input/twig/index.twig' %}
  {% block inputContent %}
    {% if options is defined and options is not empty %}
      <ul class='list-unstyled d-flex {{ (isOptionTiles and (optionTilesOrientation == 'horizontal-inline' or optionTilesOrientation == 'vertical-inline')) ? 'flex-row' : 'flex-column' }} flex-wrap gap-2 mb-0'>
        {% if isOptionTiles|default(false) %}
          {% for option in options %}
            {% set option = option|merge({
              'type': 'radio',
              'name': name,
              'isRequired': option.isRequired|default(isRequired)|default(false),
              'orientation': optionTilesOrientation == 'vertical-inline' ? 'vertical' : 'horizontal',
              'errorMessage': null
            }) %}
            {% include '@bf-components/selection-tile/twig/index.twig' with option only %}
          {% endfor %}
        {% else %}
          {% for option in options %}
            {# TODO: apply input id for name? #}
            {% set option = option|merge({
              'name': name,
              'isRequired': option.isRequired|default(isRequired)|default(false)
            }) %}
            {% include '@bf-components/input-radio-option/twig/index.twig' with option only %}
          {% endfor %}
        {% endif %}
      </ul>
    {% endif %}
 {% endblock %}