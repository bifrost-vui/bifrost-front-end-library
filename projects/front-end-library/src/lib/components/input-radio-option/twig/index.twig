{# Ui-Kit legacy fallback #}
  {% set id = id|default(inputId) %}
  {% set name = name|default(inputName) %}
  {% set labelClass = labelClass|default(labelTxtClass) %}


<label
  class='bf-input-radio {{ (isInvalid is defined and isInvalid) ? 'bf-input-radio--invalid' }} {{ (isDisabled is defined and isDisabled) ? 'bf-input-radio--disabled' }} {{ class }}'>
  <input
    class='{{ isInvalid ? 'invalid' }}'
    type='radio'
    id='{{ id }}'
    {% if name is defined and name %}
      name='{{ name }}'
    {% endif %}
    {% if value is defined and value %}
      value='{{ value }}'
    {% endif %}
    {{ (isChecked is defined and isChecked) ? 'checked' }}
    {{ (isDisabled is defined and isDisabled) ? 'disabled' }}
    {{ (isRequired is defined and isRequired) ? 'required' }}
    {% if ariaLabel is defined and ariaLabel %}
      aria-label='{{ ariaLabel }}'
    {% endif %}
    {{ extraAttribute|default(NULL) }}
  />
  <span class='bf-input-radio__control'></span>
  {% if label is defined and label %}
    <span class='bf-input-radio__label bf-text-display-sub-medium {{ labelClass|default('') }}'>{{ label }}</span>
  {% endif %}
</label>
