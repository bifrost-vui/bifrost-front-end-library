{# Ui-Kit legacy fallback #}
  {% set id = id|default(inputId) %}
  {% set name = name|default(inputName) %}
  {% set labelClass = labelClass|default(labelTxtClass) %}
  {% set isInvalid = isInvalid|default(false) %}
  {% set isDisabled = isDisabled|default(false) %}

<label class='bf-input-radio-option {{ isInvalid ? 'bf-input-radio-option--invalid' }} {{ isDisabled ? 'bf-input-radio-option--disabled' }} {{ class }}'>
  <input
    class='{{ isInvalid ? 'invalid' }}'
    type='radio'
    id='{{ id }}'
    {% if name is defined and name %}
      name='{{ name }}'
    {% endif %}
    {{ value|default(false) ? 'checked' }}
    {{ isDisabled ? 'disabled' }}
    {{ (isRequired is defined and isRequired) ? 'required' }}
    {% if ariaLabel is defined and ariaLabel %}
      aria-label='{{ ariaLabel }}'
    {% endif %}
    {{ extraAttribute|default(null) }}
  />
  <span class='bf-input-radio-option__control'></span>
  {% if label is defined and label %}
    <span class='bf-input-radio-option__label bf-text-display-sub-medium {{ labelClass|default('') }}'>{{ label }}</span>
  {% endif %}
</label>