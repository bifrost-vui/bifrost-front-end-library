{# Import macros #}
{% import "@bf-utils/macros/twig/index.twig" as macros %}

{# Default Variables (Props, Controls) #}
{% set class = class|default("") %}
{% set extraAttribute = extraAttribute|default(null) %}
{% set id = id|default(inputId) %} {# inputId is Ui-Kit legacy #}
{% set labelClass = labelClass|default(labelTxtClass)|default(null) %} {# inputId is Ui-Kit legacy #}
{% set labelExtraAttribute = labelExtraAttribute|default(null) %}
{% set name = name|default(inputName) %} {# inputId is Ui-Kit legacy #}

{# Boolean Variables #}
{% set hasAriaLabel = ariaLabel is defined and ariaLabel is not empty %}
{% set hasLabel = label is defined and label is not empty %}
{% set hasName = name is defined and name is not empty %}
{% set hasValue = value is defined and value is not empty %}
{% set isChecked = isChecked|default(false) is same as(true) %}
{% set isDisabled = isDisabled|default(false) is same as(true) %}
{% set isInvalid = isInvalid|default(false) is same as(true) %}
{% set isRequired = isRequired|default(false) is same as(true) %}

{# Arrays of Classes With Dynamic Elements #}
{% set containerClasses = [
  "bf-input-radio-option",
  (isInvalid ? "bf-input-radio-option--invalid"),
  (isDisabled ? "bf-input-radio-option--disabled"),
  (class),
] %}
{% set inputClasses = [
  (isInvalid ? "invalid"),
] %}
{% set labelSecondSpanClasses = [
  "bf-input-radio-option__label",
  (labelClass),
] %}

{# Objects of Attributes With Dynamic Elements #}
{% set inputAttributes = {
  "type": "radio",
  "class": (isInvalid ? "invalid"),
  "id": (id),
  "name": (hasName ? name),
  "value": (hasValue ? value),
  "checked": (isChecked ? "checked"),
  "disabled": (isDisabled ? "disabled"),
  "required": (isRequired ? "required"),
  "aria-label": (hasAriaLabel ? ariaLabel),
} %}
{% if extraAttribute is defined %}
  {% if extraAttribute is iterable %}
    {# is an object #}
    {% set inputAttributes = inputAttributes|merge(extraAttribute) %}
  {% else %}
    {# is a string #}
    {% set inputAttributes = inputAttributes|merge({"bfString": extraAttribute}) %}
  {% endif %}
{% endif %}

{% set labelSecondSpanAttributes = {
  "class": (labelSecondSpanClasses|join(' ')|trim),
} %}
{% if labelExtraAttribute is defined %}
  {% if labelExtraAttribute is iterable %}
    {# is an object #}
    {% set inputAttributes = labelSecondSpanAttributes|merge(labelExtraAttribute) %}
  {% else %}
    {# is a string #}
    {% set labelSecondSpanAttributes = labelSecondSpanAttributes|merge({"bfString": labelExtraAttribute}) %}
  {% endif %}
{% endif %}

<label class="{{ containerClasses|join(' ')|trim }}">
  <input {{ macros.addAttributes(inputAttributes) }} />
  <span class="bf-input-radio-control"></span>
  {% if hasLabel %}
    <span {{ macros.addAttributes(labelSecondSpanAttributes) }}>
      {{ label|raw }}
    </span>
  {% endif %}
</label>
