{# Default Variables (Props, Controls) #}
{% set ariaLabel = ariaLabel|json_parse %}
{% set class = class|json_parse %}
{% set extraAttribute = extraAttribute|json_parse %}
{% set id = id|json_parse %}
{% set isChecked = isChecked|json_parse %}
{% set isDisabled = isDisabled|json_parse %}
{% set isInvalid = isInvalid|json_parse %}
{% set isRequired = isRequired|json_parse %}
{% set label = label|json_parse %}
{% set labelClass = labelClass|json_parse %}
{% set labelExtraAttribute = labelExtraAttribute|json_parse %}
{% set name = name|json_parse %}
{% set value = value|json_parse %}

{# Arrays of Classes With Dynamic Elements #}
{% set mainContainerClasses = [
  "container-fluid mt-6 px-2",
  "d-flex flex-row flex-wrap",
  (_background),
] %}

{# Template #}
<div class="{{ mainContainerClasses|join(' ')|trim }}">
  <div class="p-3">
    {% include "@bf-components/input-checkbox-option/twig/index.twig" with {
      id: (id|default(inputId)) ~ 1
    } %}
  </div>
  <div class="p-3">
    {% include "@bf-components/input-checkbox-option/twig/index.twig" with {
      id: (id|default(inputId)) ~ 2,
      isChecked: isChecked|default(true)
    } %}
  </div>
  <div class="p-3">
    {% include "@bf-components/input-checkbox-option/twig/index.twig" with {
      id: (id|default(inputId)) ~ 3,
      isDisabled: isDisabled|default(true),
      isChecked: isChecked|default(true)
    } %}
  </div>
  <div class="p-3">
    {% include "@bf-components/input-checkbox-option/twig/index.twig" with {
      id: (id|default(inputId)) ~ 4,
      isDisabled: isDisabled|default(true)
    } %}
  </div>
  <div class="p-3">
    {% include "@bf-components/input-checkbox-option/twig/index.twig" with {
      id: (id|default(inputId)) ~ 5,
      isInvalid: isInvalid|default(true)
    } %}
  </div>
  <div class="p-3">
    {% include "@bf-components/input-checkbox-option/twig/index.twig" with {
      id: (id|default(inputId)) ~ 6,
      isChecked: isChecked|default(true),
      isInvalid: isInvalid|default(true)
    } %}
  </div>
</div>
