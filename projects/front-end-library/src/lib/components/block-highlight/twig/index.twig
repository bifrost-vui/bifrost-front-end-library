{% set hasImage     = image.src is defined and image.src is not empty %}
{% set titleTag     = titleTag|default('h2') %}

<article class='
    bf-block bf-block--highlight
    d-flex flex-column flex-sm-row
    {% if fullWidth is defined and fullWidth is same as (true) %}bf-block--fullwidth{% endif %}
    {{ class }}'
>

    {% if hasImage %}
        <div class='bf-block__visual d-flex justify-content-center align-items-center bf-color-bg-brand'>
            <img
                src='{{ image.src|default('') }}'
                data-src='{{ image.dataSrc|default('') }}'
                alt='{{ image.alt|default('') }}'
            />
        </div>
    {% endif %}
    
    <div class='p-5'>
        {% if title is defined %}
            <{{ titleTag|default('h2') }} {% if titleTag|default('h2') is not same as ('h2') %}class='h2'{% endif %}>
                {{ title }}
            </{{ titleTag|default('h2') }}>
        {% endif %}
        {% if paragraph is defined %}
            <p>
                {{ paragraph }}
            </p>
        {% endif %}
        {% if button is defined %}
            {% set button = button|merge( { 'hierarchy': button.hierarchy|default('primary-alt') } ) %}
            {% include '@bf-components/button/twig/index.twig' with button only %}
        {% endif %}
    </div>

</article>