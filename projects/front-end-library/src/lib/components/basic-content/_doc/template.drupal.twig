{# Default Variables (Props, Controls) #}
{% set image = image|json_parse %}
{% set buttons = buttons|json_parse %}
{% set rowButtons = rowButtons|json_parse %}
{% set links = links|json_parse %}
{% set reversed = reversed|json_parse %}

{# Template #}
<section class="d-flex flex-column justify-content-center minh-100">
  {% for index in [1, 2] %}

    {# In Loop : Boolean Variables #}
    {% set isReversed = reversed|default(index == 2) %}

    {# In Loop : Arrays of Classes With Dynamic Elements #}
    {% set innerContainerClasses = [
      "flex-grow-1 d-flex flex-column justify-content-center p-4 minh-100",
      (isReversed ? "reversed bf-color-bg-ground"),
    ] %}

    <div class="{{ innerContainerClasses|join(' ')|trim }}">
      {% include "@bf-components/basic-content/twig/index.twig" %}
    </div>
  {% endfor %}
</section>
