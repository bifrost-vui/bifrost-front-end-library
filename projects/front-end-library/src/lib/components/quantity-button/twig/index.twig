{% set min          = min|default('0') %}
{% set max          = max|default('3') %}
{% set inputValue             = inputValue|default(min) %}

<div class='bf-quantity-button d-flex flex-row justify-content-center align-items-center'>
    <button type="button" disabled class="bf-button-icon js-bf-quantity-button__minus bf-quantity-button__minus vui--style-reset p-0 m-0">

    {% include '@bf-components/icon/twig/index.twig' with {
        name        : "minus-circle-outline",
        class       : "bf-icon",
        size        : "medium",
        type        : "interface"
    } %}
    </button>

    <div class="bf-input">
        <input id="{{ input.id }}"
               readonly
               type="number"
               name="quantity"
               aria-label="number"
               class="text-center bf-quantity-button__input js-bf-quantity-button__input border-0"
               min="{{ min }}"
               max="{{ max }}"
               value="{{ inputValue }}"
        >
    </div>

    <button type="button"  class="bf-button-icon js-bf-quantity-button__plus bf-quantity-button__plus vui--style-reset p-0 m-0 ">
    {% include '@bf-components/icon/twig/index.twig' with {
        name        : "plus-circle-outline",
        class       : "bf-icon",
        size        : "medium",
        type        : "interface"
    } %}
    </button>

</div>