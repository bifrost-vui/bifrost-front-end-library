<button 
    type='button'
    class='
        btn
        btn-{{ size|default('md') }}
        btn-{{ hierarchy|default('secondary') }}
        {% if reversed is same as (true) %}reversed{% endif %}
        {% if fullWidth is same as (true) %}btn-block{% endif %}
        {{ class|default('') }}
    {% if disabled is same as ('true') %}disabled{% endif %}'
>
    {{ label|default('Default') }}
</button>