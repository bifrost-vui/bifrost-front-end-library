{% set image = image|json_parse %}
{% set badge = badge|json_parse %}
{% set reversed = reversed|json_parse %}
{% set isClickable = isClickable|json_parse %}
{% set linkLabel = linkLabel|json_parse %}

<div
  class="d-flex flex-column flex-sm-row justify-content-center minh-100 {{
  reversed
    ? "reversed bf-color-bg-ground"
  }}"
>
  {% for index in [1, 2] %}
    <div
      class="flex-grow-1 d-flex flex-column align-items-center justify-content-center minh-100
                    p-4 {{
      index == 2 and reversed is not defined
        ? "reversed bf-color-bg-ground"
      }}"
    >
      {% include "@bf-components/banner/twig/index.twig" with {
        image: null,
        iconName: null
      } %}

      {% include "@bf-components/banner/twig/index.twig" with {
        image: null
      } %}

      {% include "@bf-components/banner/twig/index.twig" with {
        iconName: null,
        isClickable: isClickable|default(false),
        linkLabel: linkLabel|default("This is a link inside a banner")
      } %}
    </div>
  {% endfor %}
</div>
