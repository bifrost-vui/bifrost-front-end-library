<a
  class="bf-link
		{{
  hierarchy is defined and hierarchy == "primary"
    ? "bf-link--primary"
    : "bf-link--native"
  }}
		{{
  isUnderline is defined and isUnderline == false
    ? "bf-link--no-underline"
  }}
		{{ label is defined and label is empty ? "bf-link--icon-only" }}
		{{
  isDisabled is defined and isDisabled
    ? "disabled"
  }}
		{{ reversed is defined and reversed ? "reversed" }}
		{{ class|default("") }}"
  {{
  isDisabled
    ? "aria-disabled='true' role='link'"
    : "href='" ~ (href|default("")) ~ "'"
  }}
  {{ title is defined and title ? "title='" ~ title ~ "'" }}
  {{ ariaLabel is defined and ariaLabel ? "aria-label='" ~ ariaLabel ~ "'" }}
  {{ rel is defined and rel ? "rel='" ~ rel ~ "'" }}
  {{
  dataDismiss is defined and dataDismiss
    ? "data-dismiss='" ~ dataDismiss ~ "'"
  }}
  {{
  dataToggle is defined and dataToggle
    ? "data-toggle='" ~ dataToggle ~ "'"
  }}
  {{
  dataTarget is defined and dataTarget
    ? "data-target='" ~ dataTarget ~ "'"
  }}
  {{ extraAttribute|default(null) }}
>
  <span class="d-flex align-items-center gap-1">
    {% if iconName is defined and iconName %}
      {# prettier-ignore #}
      {% set classPosition = (iconPosition is defined and iconPosition is same as("right") ? "order-2" : "") %}
      {% include "@bf-components/icon/twig/index.twig" with {
        name: iconName,
        size: hierarchy is defined and hierarchy == "primary"
          ? "small"
          : "xsmall",
        class: classPosition
      } only %}
    {% endif %}
    {% if label %}
      <span class="{{ labelClass|default("") }}">{{ label|default("") }}</span>
    {% endif %}
  </span>
</a>
