<a
    href='{{ href|default('javascript:window.scrollTo(top);') }}'
    {% if label is not empty %}data-title='{{ label|render|default(NULL) }}'{% endif %}
    class='bf-link {{ class|default('') }}'
    {{ extraAttribute|default(NULL) }}
>
    {{ label|default('Back to top') }}
    {% include '@bf-components/icon/twig/index.twig' with {
        name: 'chevron-up'
    } only %}
</a>
