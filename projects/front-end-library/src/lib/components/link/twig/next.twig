<a
  href="{{ href|default("#") }}"
  {{
  linkLabel is not empty
    ? "data-title='"
      ~ (linkLabel
        |render
        |t(
          [],
          {
            langcode: "EN",
            context: "data-title-attribute"
          }
        ))
      ~ "'"
  }}
  class="hover-translate pseudo-icon--arrow-right h{{ linkSize|default(
    "4"
  ) }} font-weight-{{ linkFontWeight|default(
    "normal"
  ) }} d-{{ linkDisplay|default("block") }} {{ linkClass|default("") }}"
  {{ extraAttribute|default(null) }}
>
  <span>{{ linkLabel|default("Link to next")|raw }}</span>
  <span class="pseudo-icon--breaker">.</span>
</a>
