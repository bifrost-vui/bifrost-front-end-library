{# Default Variables (Props, Controls) #}
{% set isChecked = isChecked|json_parse %}
{% set isDisabled = isDisabled|json_parse %}
{% set isRequired = isRequired|json_parse %}
{% set label = label|json_parse %}

{# Arrays of Classes With Dynamic Elements #}
{% set mainContainerClasses = [
  "d-flex flex-align-center-space-between flex-wrap p-4 gap-4",
  (_background),
] %}

{# Template #}
<div class="{{ mainContainerClasses|join(' ')|trim }}">
  <div class="d-flex flex-column">
    <p class="text-center">Default</p>
    {% include "@bf-components/input-switch/twig/index.twig" with {
      id: id ~ "1"
    } %}
  </div>
  <div class="d-flex flex-column">
    <p class="text-center">Checked</p>
    {% include "@bf-components/input-switch/twig/index.twig" with {
      id: id ~ "2",
      isChecked: isChecked|default(true)
    } %}
  </div>
  <div class="d-flex flex-column">
    <p class="text-center">Disabled</p>
    {% include "@bf-components/input-switch/twig/index.twig" with {
      id: id ~ "3",
      isDisabled: isDisabled|default(true)
    } %}
  </div>
  <div class="d-flex flex-column">
    <p class="text-center">Disabled + checked</p>
    {% include "@bf-components/input-switch/twig/index.twig" with {
      id: id ~ "4",
      isDisabled: isDisabled|default(true),
      isChecked: isChecked|default(true)
    } %}
  </div>
</div>
