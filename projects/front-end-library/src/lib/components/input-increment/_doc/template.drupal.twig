{% set isReadOnly = isReadOnly|json_parse|default(false) %}

<div class='px-7 d-flex flex-column align-items-center justify-content-center minh-100'>
    {% for index in [1,2] %}
        {% set inputId = 'my-input-id-'~ index %}
        {% set inputId = 'my-input-name-'~ index %}

        <div class="p-5 {{ index == 2 ? 'reversed bf-color-bg-ground' : ''  }}">

        {% include '@bf-components/input-increment/twig/index.twig' with {
            button  : {
                customClass : '',
                isReadOnly  : false,
                inputId     : {{ inputId }},
                min         : 0,
                max         : 3,
                }
            }
        %}

        </div>

    {% endfor %}
</div>