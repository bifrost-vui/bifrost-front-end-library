{% set attrReadOnly     = (isReadOnly is defined and isReadOnly is same as (true)) ? ' readonly' : '' %}
{% set classHide        = (isReadOnly is defined and isReadOnly is same as (true)) ? ' d-none' : '' %}
{% set attrDisabled     = (isDisabled is defined and isDisabled is same as (true)) ? ' disabled' : '' %}
{% set classDisabled    = (isDisabled is defined and isDisabled is same as (true)) ? ' disabled' : '' %}
{% set classIsInvalid   = (isInvalid is defined and isInvalid is same as(true)) ? ' is-invalid' : '' %}


<div class="bf-inputIncrement js-bf-inputIncrement align-items-center {{ customClass ~ classDisabled ~ classIsInvalid }} flex-wrap" >

    {% include '@bf-components/button/twig/index.twig' with {
        label           : '',
        hierarchy       : 'secondary',
        isDisabled      : null,
        isLoading       : false,
        iconName        : "minus",
        iconPosition    : '',
        class           : classHide is empty ? ' js-bf-inputIncrement__minus bf-button bf-button--secondary rounded-circle px-2 ' : classHide,
        ariaControls    : inputId,
        role            : 'button'
    } only %}

        <input id="{{ inputId }}"
               type="number"
               class="text-center bf-text-display-small bf-inputIncrement__input js-bf-inputIncrement__input border-0  m-0  py-0 {{ attrDisabled }}"
               aria-label="{{ arialLabel }}"
               value="{{ inputValue }}"
               min="{{ min }}"
               max="{{ max }}"
               {{ attrReadOnly }}
               {{ attrDisabled }}
        >

    {% include '@bf-components/button/twig/index.twig' with {
        label           : '',
        hierarchy       : 'secondary',
        isDisabled      : null,
        isLoading       : false,
        iconName        : "plus",
        iconPosition    : '',
        class           : classHide is empty ? ' js-bf-inputIncrement__plus bf-button bf-button--secondary rounded-circle px-2 ' : classHide,
        ariaControls    : inputId,
        role            : 'button'
        } only %}
    <div class="invalid-feedback">
        <p>{{ errorMsg }}</p>
    </div>
</div>