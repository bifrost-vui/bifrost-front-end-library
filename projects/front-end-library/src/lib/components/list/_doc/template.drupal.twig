{% set content = content|json_parse %}
{% set reversed = reversed|json_parse %}

<div
  class="d-flex flex-column flex-sm-row justify-content-center minh-100 {{
  reversed
    ? "reversed bf-color-bg-ground"
  }}"
>
  {% for index in [1, 2] %}
    <div
      class="flex-grow-1 d-flex flex-column justify-content-center minh-100 p-4 {{
      index == 2 and reversed is not defined
        ? "reversed bf-color-bg-ground"
      }}"
    >
      {% include "@bf-components/list/twig/index.twig" %}
    </div>
  {% endfor %}
</div>
