{% set label          = label|json_parse %}
{% set tooltip        = tooltip|json_parse %}
{% set inputType      = inputType|json_parse %}
{% set isDisabled     = isDisabled|json_parse %}
{% set isReadonly     = isReadonly|json_parse %}
{% set isInvalid      = isInvalid|json_parse %}
{% set isRequired     = isRequired|json_parse %}
{% set maxlength      = maxlength|json_parse %}
{% set minlength      = minlength|json_parse %}
{% set autocomplete   = autocomplete|json_parse %}
{% set info           = info|json_parse %}
{% set validationList = validationList|json_parse %}
{% set _backgrounds = _backgrounds|json_parse %}

<div class='mt-6 px-2 d-flex flex-row flex-wrap gap-1 flex-grow-1'>
  <div class='p-3 d-flex flex-column flex-grow-1 {{ _background|default(NULL) }}'>
    {% include '@bf-components/input-text/twig/' ~ inputType|default('index') ~ '.twig' %}
  </div>
</div>