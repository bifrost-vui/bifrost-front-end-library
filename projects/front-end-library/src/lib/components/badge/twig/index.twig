<div class='
    bf-badge
    bf-badge--{{ hierarchy|default('secondary') }}
    {% if angle is defined and angle is not empty %}bf-badge--angle-{{ angle }}{% endif %}
    {{ class|default('') }}
    '>
    <div class='bf-badge__container '>
        <p class='bf-badge__label small font-weight-bold {% if noUppercase is not defined or noUppercase is not same as (true) %}text-uppercase{% endif %}'>
            {{ label|default('') }}
        </p>
    </div>
</div>