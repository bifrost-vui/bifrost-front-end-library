<div
  class=
  'bf-badge
  bf-badge--{{ hierarchy|default('secondary') }}
  {% if isRounded |default(false) %}
    bf-badge--rounded
  {% elseif angle|default(null) %}
    bf-badge--angle-{{ angle }}
  {% endif %}
  {{ class|default('') }}'
>
  <div class='bf-badge__inner position-relative d-flex align-items-center'>
    <p class='bf-text-interface-small bf-badge__label {% if noUppercase is defined and noUppercase %}text-transform-initial{% endif %} m-0'>
      {% if iconName is defined and iconName %}
        {% include '@bf-components/icon/twig/index.twig' with {
          name  : iconName,
          class : 'pr-1',
          size  : 'small',
        } only %}
      {% endif %}

        <span class='bf-badge__label__text'>
          {{ label|default('') }}
        </span>
    </p>
  </div>
</div>