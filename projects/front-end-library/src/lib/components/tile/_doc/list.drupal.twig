{# Default Variables (Props, Controls) #}
{% set isDisabled = isDisabled|json_parse %}

{# Template #}
<div class="d-flex flex-column minh-100">
  {% for index in [1, 2] %}

    {# In Loop : Boolean Variables #}
    {% set isReversed = index == 2 and reversed is not defined %}

    {# In Loop : Arrays of Classes With Dynamic Elements #}
    {% set innerContainerClasses = [
      "d-flex flex-grow-1",
      (isReversed ? "reversed bf-color-bg-ground"),
    ] %}

    <div class="{{ innerContainerClasses|join(' ')|trim }}">
      <ul
        class="container list-unstyled d-flex flex-row flex-wrap align-items-center justify-content-center gap-3"
      >
        <li style="flex: 1">
          {% include "@bf-components/tile/twig/index.twig" with {
            content: "<img src='/logo/apple.svg' loading='lazy'>",
            class: "w-100",
            style: "height: 6rem;"
          } %}
        </li>
        <li style="flex: 1">
          {% include "@bf-components/tile/twig/index.twig" with {
            content: "<img src='/logo/google.svg' loading='lazy'>",
            class: "w-100",
            style: "height: 6rem;"
          } %}
        </li>
        <li style="flex: 1">
          {% include "@bf-components/tile/twig/index.twig" with {
            content: "<img src='/logo/samsung.svg' loading='lazy'>",
            class: "w-100",
            style: "height: 6rem;"
          } %}
        </li>
        <li style="flex: 1">
          {% include "@bf-components/tile/twig/index.twig" with {
            content: "<img src='/logo/lg.svg' loading='lazy'>",
            class: "w-100",
            style: "height: 6rem;"
          } %}
        </li>
        <li style="flex: 1">
          {% include "@bf-components/tile/twig/index.twig" with {
            content: "<img src='/logo/motorola.svg' loading='lazy'>",
            class: "w-100",
            style: "height: 6rem;"
          } %}
