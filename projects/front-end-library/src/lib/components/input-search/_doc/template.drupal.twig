{% set reversed     = reversed|json_parse %}
{% set isDisabled   = isDisabled|json_parse %}

<div
    class="px-7 d-flex align-items-center justify-content-center minh-100 {% if reversed %}reversed bf-color-bg-ground{% endif %}"
>
    {% include '@bf-components/input-search/twig/index.twig' %}
</div>

{% if isInvalid %}
    <script>
        function setInvalid() {
            document.getElementsByClassName('form-group')[0].classList.add('is-invalid');
        }
        setInvalid();
    </script>
{% endif %}