{# Default Variables (Props, Controls) #}
{% set icon = icon|json_parse %}
{% set isDisabled = isDisabled|json_parse %}

{# Template #}
<div class="px-7 d-flex flex-column align-items-center justify-content-center minh-100">
  <div class="d-flex gap-4 pt-4 px-5 small">
    <p>Default</p>
    <p>badge</p>
    <p>href</p>
    <p>isDisabled</p>
  </div>

  {% for index in [1, 2] %}

    {# In Loop : Boolean Variables #}
    {% set isReversed = index == 2 and reversed is not defined %}

    {# In Loop : Arrays of Classes With Dynamic Elements #}
    {% set innerContainerClasses = [
      "d-flex gap-4 p-5",
      (isReversed ? "reversed bf-color-bg-ground"),
    ] %}

    <div class="{{ innerContainerClasses|join(' ')|trim }}">
      {% include "@bf-components/button-icon/twig/index.twig" %}

      {% include "@bf-components/button-icon/twig/index.twig" with {
        badgeLabel: badgeLabel|default("3")
      } %}

      {% include "@bf-components/button-icon/twig/index.twig" with {
        href: href|default("#")
      } %}

      {% include "@bf-components/button-icon/twig/index.twig" with {
        isDisabled: isDisabled|default(true)
      } %}
    </div>
  {% endfor %}
</div>
