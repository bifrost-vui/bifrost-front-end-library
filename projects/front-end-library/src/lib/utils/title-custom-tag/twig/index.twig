{# Default variables #}
{% set customTitleTag = customTitleTag|default("h1") %}
{% set titleTagClasses = titleTagClasses|default("") %}

{# Classes #}
{% if titleTagClasses is defined and titleTagClasses %}
  {% set titleTagClasses = ' class="' ~ titleTagClasses ~ '">' %}
{% endif %}

{# Template #}
{{ ('<' ~ customTitleTag ~ titleTagClasses)|raw }}
  {% block titleTagContent %}{% endblock %}
{{ ('</' ~ customTitleTag ~ '>')|raw }}
